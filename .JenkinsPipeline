pipeline {
    agent { label 'pbench' }
    stages {
        stage('Linting') {
            steps {
                echo 'Linting ...'
                sh 'tox -e lint'
                echo '... Linted'
            }
        }
        stage('Unit Tests') {
            steps {
                echo 'Unit tests !!'
                sh 'podman --version'
            }
        }
    }
}
