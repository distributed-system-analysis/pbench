pipeline {
    agent { label 'pbench' }
    stages {
        stage('Unit Tests') {
            steps {
                echo 'Unit tests for a PR !!'
                sh 'podman --version'
                sh 'buildah --version'
            }
        }
        stage('Linting') {
            steps {
                echo 'Linting ... hi pbench-ci-multi!'
                sh 'tox -e lint'
                echo '... Linted'
            }
        }
    }
}
