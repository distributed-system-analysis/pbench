#! /bin/bash

###########################################################################
# load common things
opts=$SHELLOPTS
case $opts in
    *xtrace*)
        dir=$(dirname $(command -v $0))
        PROG=$(basename $(command -v $0))
        ;;
    *)
        dir=$(dirname $0)
        PROG=$(basename $0)
        ;;
esac

export CONFIG=/opt/pbench-server/lib/config/pbench-server.cfg

. $dir/pbench-base.sh
###########################################################################

results_full_path=$1
tarball=$2

# symlink into the TODO state dir
mkdir -p $results_full_path/TODO
cd $results_full_path/TODO
ln -s $results_full_path/$tarball .

exit 0
