#!/usr/bin/env python

import sys
import json

with open(sys.argv[4], "r") as fp:
    text = fp.read()

doc = {
    "@timestamp": sys.argv[1],
    "name": sys.argv[2],
    "doctype": sys.argv[3],
    "text": text
}

json.dump(doc, sys.stdout, indent=4, separators=(',', ': '))
sys.stdout.write('\n')

sys.exit(0)
