#! /bin/bash
# do all the setup

config=$1

# we *must* have a config file at this point
if [ ! -f $config ] ;then
    echo "$config does not exist"
    exit 127
fi

export CONFIG=$config
crontabdir=$(getconf.py crontabdir pbench-server)
crontabdir=${crontabdir:-/opt/pbench-server/lib/crontab}

pbench-server-activate-create-crontab $crontabdir || exit 2
pbench-server-activate-setup-results-host-info || exit 3
pbench-server-activate-create-results-dir-structure || exit 4

exit 0
