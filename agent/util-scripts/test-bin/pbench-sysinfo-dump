#!/usr/bin/env python3

import sys
import os

from pathlib import Path


with open(os.environ["_testlog"], "a") as ofp:
    args = " ".join(sys.argv)
    ofp.write(f"{args}\n")

# Mock the behavior of the real pbench-sysinfo-dump

tgtdir = Path(sys.argv[1])
sysinfo = sys.argv[2]
(tgtdir / "contents.lis").write_text(sysinfo)
sys.exit(0)
