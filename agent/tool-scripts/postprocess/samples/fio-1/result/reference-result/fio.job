[global]
bs=4k
runtime=86400
ioengine=libaio
iodepth=64
direct=1
sync=0
time_based=1
clocksource=gettimeofday
ramp_time=5
write_bw_log=fio
write_iops_log=fio
write_lat_log=fio
log_avg_msec=1000
write_hist_log=fio
log_hist_msec=10000

[job-/dev/nvme8n1]
filename=/dev/nvme8n1
rw=rw
size=4096M
numjobs=8

